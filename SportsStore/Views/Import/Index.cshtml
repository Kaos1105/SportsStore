@model IEnumerable<ImportOrder>
@{
    ViewBag.Title = "All Import Orders";
    Layout = "_AdminLayout";
}
<h2>Import Orders</h2>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Order ID</th>
                <th colspan="2">Details</th>
                <th>Sum</th>
                <th>Delivery Status</th>
            </tr>
        </thead>
        @foreach (ImportOrder o in Model)
        {
            <tr>
                <td>@o.ImportOrderID</td>
                <th>Product</th>
                <th>Quantity</th>
                <td>@o.Sum.ToString("c")</td>
                <td>
                    <form asp-action="MarkShipped" method="post">
                        <input type="hidden" name="orderId" value="@o.ImportOrderID" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Mark Delivered
                        </button>
                    </form>
                </td>
            </tr>
            @foreach (ImportItemsLine line in o.Lines)
            {
                <tr>
                    <td></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                    <td colspan="2"></td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-primary" 
            asp-controller="Import" asp-action="PlaceOrder">Place new order</a> 
}
else
{
    <div class="text-center">No Unreceived Orders</div>
}